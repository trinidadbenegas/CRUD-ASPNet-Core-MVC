
@model Herramienta

<form method="post" asp-action="DeletePOST">
    <input asp-for="Id" hidden>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Borrar Herramienta</h2>
            <hr/>
        </div>
        <div class="mb-3">
            <label asp-for="TipoHerramienta">Herramienta: </label>
            <input asp-for="TipoHerramienta" type="text" class="form-control"  placeholder="Herramienta" disabled>
            
        </div>
        <div class="mb-3">
            <label asp-for="Disponibilidad">Disponibilidad</label>
            
            <select name="Disponibilidad" asp-for="Disponibilidad" id="Disponibilidad" disabled>
                <option value="true">Disponible</option>
                <option value="false"> No Disponible</option>
            </select>
            
           
        </div>

        <div class="mb-3">
            <label asp-for="NombreReservante"> Nombre del reservante</label>
            <input asp-for="NombreReservante" type="text" class="form-control" placeholder="Nombre del reservante" disabled>
            
        </div>

        <div class="mb-3">
            <label asp-for="ApellidoReservante">Apellido del reservante</label>
            <input asp-for="ApellidoReservante" type="text" class="form-control" placeholder="Apellido del reservante" disabled>
            
        </div>

        <div class="mb-3">
            <label asp-for="Dni">DNI</label>
            <input asp-for="Dni" type="text" class="form-control" placeholder="DNI del reservante" disabled>
           
        </div>

        <div class="mb-3">
            <label asp-for="Direccion">Dirección</label>
            <input asp-for="Direccion" type="text" class="form-control" placeholder="Direccion del reservante" disabled>
            
        </div>
        <button type="submit" class="btn btn-danger">Borrar</button>
        <a asp-controller="Herramientas" asp-action="Index" class="btn btn-secondary">Volver</a>

    </div>


</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
     
}

